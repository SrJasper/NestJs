
<main>

    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <form action="/editar" method="post" enctype="multipart/form-data">
                
                    <img src="../imagens/{{produto.img}}" alt="">
                    
                    <input type="hidden" name="nomeImagem" value="{{produto.img}}">
                    <input type="hidden" name="id" value="{{produto._id}}">
                    <input type="text"   name= "nome"   value="{{produto.nome}}"  class="form-control" placeholder="Nome do produto">
                    <input type="number" name= "valor"  value="{{produto.value}}" class="form-control" placeholder="Valor do produto">
                    <input type="file"   name= "imagem" class="form-control">
                    <input type="submit" class="btn btn-primary" value="Alterar">
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</main>